@page "/fornecedores/adicionar"
@inherits CreateFornecedorPage

<MudText Typo="Typo.h3">Novo Fornecedor</MudText>

<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />

        <MudTextField Label="Nome"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Nome"
                      For="@(() => InputModel.Nome)" />

        <MudTextField Label="Telefone"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Telefone"
                      For="@(() => InputModel.Telefone)" />

        @if (IsBusy)
        {
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
        }
        else
        {
            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary">
                Salvar
            </MudButton>
        }
    </EditForm>
</MudPaper>

