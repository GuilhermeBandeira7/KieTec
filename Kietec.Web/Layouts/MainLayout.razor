@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider /> 
<MudSnackbarProvider /> 

<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="false" Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@(() => OpenDrawer(Anchor.Start))"/>
    </MudAppBar>

    <MudDrawer @bind-Open="@open" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Kietec</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="/">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/produtos">Produtos</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/fornecedores">Fornecedores</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer>
            @Body 
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{ 
    private bool open;
    private Anchor anchor;
    
    void OpenDrawer(Anchor anchor)
    {
        open = true;
        this.anchor = anchor;
    }
}